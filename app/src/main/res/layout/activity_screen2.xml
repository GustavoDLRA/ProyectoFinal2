<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gustavodelosriosalatorregmail.proyectofinal2.screenActivity2"
    android:background="@drawable/mapacampus3">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CCI"
        android:id="@+id/cci"
        android:layout_marginTop="97dp"
        android:layout_marginLeft="91dp"
        android:layout_marginStart="91dp"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="goToPantallaCCI" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CCD"
        android:id="@+id/ccd"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/aulas3"
        android:layout_alignStart="@+id/aulas3"
        android:onClick="gotoPantallaCCD" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aulas2"
        android:id="@+id/aulas2"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/aulas1"
        android:layout_toStartOf="@+id/aulas1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aulas3"
        android:id="@+id/aulas3"
        android:background="#00ffffff"
        android:layout_below="@+id/aulas2"
        android:layout_alignRight="@+id/cci"
        android:layout_alignEnd="@+id/cci" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aulas1"
        android:id="@+id/aulas1"
        android:background="#00ffffff"
        android:layout_below="@+id/cci"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cafe/degas"
        android:id="@+id/cafe_degas"
        android:layout_below="@+id/cci"
        android:layout_toLeftOf="@+id/aulas1"
        android:layout_toStartOf="@+id/aulas1"
        android:background="#00ffffff" />


</RelativeLayout>
